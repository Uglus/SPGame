<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainMenu" parent="Theme.SPGame">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/blue</item>
    </style>

    <style name="playersInMenu">
        <item name="android:src">@drawable/default_user</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="imgShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="viewNotVisible">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="manyPlayers" parent="playersInMenu">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>
    <style name="normalPlayers" parent="playersInMenu">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>
    <style name="fewPlayers" parent="playersInMenu">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
    </style>

    <style name="SettingsDialogAnimationTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowAnimationStyle">@style/SettingsAnimation.Window</item>
    </style>

    <style name="SettingsAnimation.Window" parent="android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="MenuStartDialogAnimationTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowAnimationStyle">@style/MenuStartDialogAnimation.Window</item>
    </style>

    <style name="MenuStartDialogAnimation.Window" parent="android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>