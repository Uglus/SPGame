<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <TextView
       android:id="@+id/tvLocalisation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvLocalisation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnLocalisation"
       app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btnLocalisation"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@id/tvLocalisation"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/btnLocalisation"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvLocalisation"
        app:layout_constraintTop_toBottomOf="@id/btnLocalisation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>